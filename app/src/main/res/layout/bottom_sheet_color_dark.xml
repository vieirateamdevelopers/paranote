                    app:civ_border_width="0.5dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_color_dark_18"
                    android:layout_width="@dimen/floating_button_max"
                    android:layout_height="@dimen/floating_button_max"
                    android:layout_marginEnd="@dimen/layout_padding_max"
                    android:src="@color/colorDarkMode18"
                    app:civ_border_color="@color/colorFabMenu"
                    app:civ_border_width="0.5dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_color_dark_19"
                    android:layout_width="@dimen/floating_button_max"
                    android:layout_height="@dimen/floating_button_max"
                    android:layout_marginEnd="@dimen/layout_padding_max"
                    android:src="@color/colorDarkMode19"
                    app:civ_border_color="@color/colorFabMenu"
                    app:civ_border_width="0.5dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_color_dark_20"
                    android:layout_width="@dimen/floating_button_max"
                    android:layout_height="@dimen/floating_button_max"
                    android:src="@color/colorDarkMode20"
                    app:civ_border_color="@color/colorFabMenu"
                    app:civ_border_width="0.5dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>