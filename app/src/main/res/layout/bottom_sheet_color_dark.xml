                    android:layout_marginEnd="@dimen/layout_padding_max"
                    android:src="@color/colorDarkMode4"
                    app:civ_border_color="@color/colorFabMenu"
                    app:civ_border_width="0.5dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_color_dark_5"
                    android:layout_width="@dimen/floating_button_max"
                    android:layout_height="@dimen/floating_button_max"
                    android:src="@color/colorDarkMode5"
                    app:civ_border_color="@color/colorFabMenu"
                    app:civ_border_width="0.5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/layout_margin_big">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_color_dark_6"
                    android:layout_width="@dimen/floating_button_max"
                    android:layout_height="@dimen/floating_button_max"
                    android:src="@color/colorDarkMode6"
                    android:layout_marginEnd="@dimen/layout_padding_max"
                    app:civ_border_color="@color/colorFabMenu"
                    app:civ_border_width="0.5dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_color_dark_7"
