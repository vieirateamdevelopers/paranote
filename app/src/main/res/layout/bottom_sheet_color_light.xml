                    app:civ_border_width="0.5dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_color_light_10"
                    android:layout_width="@dimen/floating_button_max"
                    android:layout_height="@dimen/floating_button_max"
                    android:src="@color/colorLightMode10"
                    app:civ_border_color="@color/colorFabMenu"
                    app:civ_border_width="0.5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
