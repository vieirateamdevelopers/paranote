<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_color_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundColor">

    <include layout="@layout/bottom_sheet_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/layout_margin_max">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_color_light_1"
                    android:layout_width="@dimen/floating_button_max"
                    android:layout_height="@dimen/floating_button_max"
                    android:layout_marginEnd="@dimen/layout_padding_max"
                    android:src="@color/colorLightMode"
                    app:civ_border_color="@color/colorFabMenu"
                    app:civ_border_width="0.5dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_color_light_2"
                    android:layout_width="@dimen/floating_button_max"
                    android:layout_height="@dimen/floating_button_max"
                    android:layout_marginEnd="@dimen/layout_padding_max"
                    android:src="@color/colorLightMode2"
                    app:civ_border_color="@color/colorFabMenu"
                    app:civ_border_width="0.5dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_color_light_3"
                    android:layout_width="@dimen/floating_button_max"
                    android:layout_height="@dimen/floating_button_max"
                    android:layout_marginEnd="@dimen/layout_padding_max"
                    android:src="@color/colorLightMode3"
                    app:civ_border_color="@color/colorFabMenu"
                    app:civ_border_width="0.5dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_color_light_4"
                    android:layout_width="@dimen/floating_button_max"
                    android:layout_height="@dimen/floating_button_max"
                    android:layout_marginEnd="@dimen/layout_padding_max"
                    android:src="@color/colorLightMode4"
                    app:civ_border_color="@color/colorFabMenu"
                    app:civ_border_width="0.5dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_color_light_5"
                    android:layout_width="@dimen/floating_button_max"
                    android:layout_height="@dimen/floating_button_max"
                    android:src="@color/colorLightMode5"
                    app:civ_border_color="@color/colorFabMenu"
                    app:civ_border_width="0.5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/layout_margin_big">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_color_light_6"
                    android:layout_width="@dimen/floating_button_max"
                    android:layout_height="@dimen/floating_button_max"
                    android:src="@color/colorLightMode6"
                    android:layout_marginEnd="@dimen/layout_padding_max"
                    app:civ_border_color="@color/colorFabMenu"
                    app:civ_border_width="0.5dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_color_light_7"
                    android:layout_width="@dimen/floating_button_max"
                    android:layout_height="@dimen/floating_button_max"
                    android:src="@color/colorLightMode7"
                    android:layout_marginEnd="@dimen/layout_padding_max"
                    app:civ_border_color="@color/colorFabMenu"
                    app:civ_border_width="0.5dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_color_light_8"
                    android:layout_width="@dimen/floating_button_max"
                    android:layout_height="@dimen/floating_button_max"
                    android:src="@color/colorLightMode8"
