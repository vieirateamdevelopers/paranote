<resources>

    <style name="IntroTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="LightTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorLightMode</item>
        <item name="colorPrimaryDark">@color/colorLightMode</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/colorLightMode</item>
        <item name="foregroundColor">@color/colorAccent</item>
        <item name="backgroundViewColor">@color/colorLightViews</item>
        <item name="foregroundViewColor">@color/colorAccent</item>
        <item name="backgroundToolbarColor">@color/colorLightToolbar</item>
        <item name="android:textColorHint">@color/colorLightHint</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionModeStyle">@style/ActionModeTheme</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonTheme</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorDarkMode</item>
        <item name="colorPrimaryDark">@color/colorDarkMode</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/colorDarkMode</item>
        <item name="foregroundColor">@color/colorDarkToolbar</item>
        <item name="backgroundViewColor">@color/colorDarkViews</item>
        <item name="foregroundViewColor">@color/colorLightMode</item>
        <item name="backgroundToolbarColor">@color/colorDarkToolbar</item>
        <item name="android:textColorHint">@color/colorDarkHint</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="actionModeStyle">@style/ActionModeTheme</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonTheme</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="ActionModeTheme" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/colorAccent</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="FloatingActionButtonTheme" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/FloatingActionButtonThemeOverlay</item>
    </style>

    <style name="FloatingActionButtonThemeOverlay" parent="">
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorLightMode</item>
    </style>

</resources>
